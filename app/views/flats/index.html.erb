<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <div data-controller="searchflatautocomplete">  
      <%= form_with url: flats_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query],
          id: "input-autocomplete",
          class: "form-control",
          placeholder: "Search your flat here!",
          data: { action: "input->searchflatautocomplete#search" } %>
        <%= submit_tag "Search", name: "", class: "btn btn-success" %>
      <% end %>
      <ul data-searchflatautocomplete-target="results" class="list-group">
        <li>o que </li>
      </ul>
    </div>
  </div>


</div>

<div class="row">
  <div class="text-center py-5">
    <h1>Airbnb Devise - All Flats</h1>
    <% if @flats.count.zero? %>
      <p>No one Flat for this search!</p>
    <% else %>
      <p><%= @flats.count %> accommodations to bookings</p>
    <% end %>
  </div>
  <% @flats.each do |flat| %>
    <%= render flat %>
  <% end %>
</div>
