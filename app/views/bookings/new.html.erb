<div class="card d-flex flex-column p-4 shadow-sm my-4">
  <h1 class="text-center py-1">Booking this Flat</h1>
  <div class="row">
  <%= render @flat %>
  <div class="col-lg-8 col-md-6 col-sm-12 my-3">
    <%= simple_form_for [@flat, @booking] do |f| %>
      <%= f.input :check_in, html5: true %>
      <%= f.input :check_out, html5: true %>
      <%= f.hidden_field :status %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :flat_id, value: @flat.id %>

      <%= f.button :submit, class: "btn btn-success" %>
      <%= link_to "Back", flat_path(@flat), class: "btn btn-warning" %>
    <% end %>
  </div>
  </div> 
</div>
