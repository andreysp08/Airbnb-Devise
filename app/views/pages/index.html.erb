
<div class="d-flex flex-column">
  <div class="text-center py-5">
    <%= link_to "Welcome to Our Own Space - Airbnb Devise", flats_path, class: "h1 text-decoration-none text-dark" %>
    <p>Discover a perfect stay for your adventures</p>
  </div>


  <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://loremflickr.com/991/800/house,home" class="d-block w-100" alt="House/Home images">
      </div>
      <div class="carousel-item">
        <img src="https://loremflickr.com/991/800/garden" class="d-block w-100" alt="Garden images">
      </div>
      <div class="carousel-item">
        <img src="https://loremflickr.com/991/800/kitchen" class="d-block w-100" alt="bathroom">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev" id="slide-button">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next" id="slide-button">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <div class="p-2 text-light text-center bg-primary w-100" style="bottom: 0;">
    <h2>Find Your Perfect Stay</h2>
      <%= link_to "See all Apartaments", flats_path, class: "btn btn-light btn-lg" %>
  </div>
</div>
